<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackgroundColor" Color="#000218"/>
    <SolidColorBrush x:Key="MenuColor" Color="#060A30"/>

    <Style x:Key="MainWindow" 
           TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
        <Setter Property="CornerRadius" Value="15"/>
    </Style>

    <Style x:Key="MenuBorderStyle" 
           TargetType="Border">
        <Setter Property="Background" Value="{StaticResource MenuColor}"/>
        <Setter Property="CornerRadius" Value="15, 15, 0, 0"/>
    </Style>

    <Style x:Key="MenuStyle">
        
    </Style>
    
</ResourceDictionary>